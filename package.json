{
  "name": "@ff00ff/mammoth",
  "license": "MIT",
  "version": "1.0.0",
  "main": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "keywords": [
    "typescript",
    "postgres",
    "query",
    "builder",
    "sql",
    "typed",
    "database",
    "orm"
  ],
  "files": [
    ".build",
    "src"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "dts-jest": "^23.3.0",
    "jest": "^26.6.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "rm -rf .build && rm -rf coverage",
    "build": "tsc",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__",
      "__checks__"
    ],
    "testPathIgnorePatterns": [
      "/\\.build/",
      "/node_modules/",
      "helpers"
    ],
    "testRegex": "/__tests__|__checks__/.*\\.(test|check)\\.ts$",
    "transform": {
      "\\.check\\.ts$": "dts-jest/transform",
      "\\.ts$": "ts-jest"
    }
  }
}
